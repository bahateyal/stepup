@page
@model StepUp.Pages.main.verifyModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="he">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify You Are Not a Robot</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }

        form.center-box {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border: 2px solid #4CAF50;
            border-radius: 8px;
            padding: 20px;
            width: 250px;
            background-color: #f9f9f9;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            position: relative;
            top: -10vh;
        }

        fieldset {
            border: 1px solid #ccc;
            border-radius: 6px;
            padding: 10px;
            text-align: center;
            background-color: white;
        }

        legend {
            font-weight: bold;
            color: #333;
        }

        input[type="checkbox"] {
            transform: scale(1.2);
            margin-right: 5px;
        }

        label {
            font-size: 16px;
            color: #333;
        }

        button {
            margin-top: 10px;
            padding: 8px 15px;
            font-size: 16px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.3s;
        }

            button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <form method="post" class="center-box" onsubmit="return validateForm()">
        <fieldset>
            <legend>Verify you are not a robot</legend>
            <input id="verify" type="checkbox" name="Verify" value="true">
            <label for="verify">I am not a robot</label>
        </fieldset>
        <button type="submit">Send</button>
    </form>

    <script>
        function validateForm() {
            const checkbox = document.getElementById('verify');
            if (!checkbox.checked) {
                alert('אנא סמן את תיבת הסימון כדי להמשיך');
                return false;
            }
            return true;
        }
    </script>
</body>
</html>